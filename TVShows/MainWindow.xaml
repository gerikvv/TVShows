<Window x:Class="TVShows.Main_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:TVShows" 
        Title="Smonitoring" Height="650" Width="700" Icon="/TVShows;component/Images/favicon.ico" Loaded="Window_loaded">
    
    <Window.Background>
        <ImageBrush ImageSource="/TVShows;component/Images/noBrandBg.jpg" Stretch="UniformToFill" />
    </Window.Background>
    
    <Grid Background="{x:Null}">
        
        <DockPanel Name="dockPanel1" Margin="45,25" Background="#FFB37A7A" HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:RandomTVShowControl HorizontalAlignment="Center" Margin="0,25,0,0" DockPanel.Dock="Bottom" VerticalAlignment="Center" />
            <local:Cap DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Center" />
        </DockPanel>
    </Grid>
</Window>
