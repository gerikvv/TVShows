<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--<SnippetMergedDictionaries>-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!--</SnippetMergedDictionaries>-->

    <Style x:Key="LineSeparator" TargetType="{x:Type TextBlock}" BasedOn="{x:Null}">
        <Setter Property="Foreground" Value="{StaticResource PressedBorderBrush}"/>
        <Setter Property="FontSize" Value="8.5"/>
        <Setter Property="Text" Value="⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅⋅"/>
        <Setter Property="Margin" Value="10,-1,10,0"/>
        <Setter Property="TextAlignment" Value="Left"/>
    </Style>

    <Style x:Key="InfoValue" TargetType="{x:Type TextBlock}" BasedOn="{x:Null}">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Margin" Value="100,-13,10,0"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>

</ResourceDictionary>