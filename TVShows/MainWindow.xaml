<Window x:Class="TVShows.Main_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:TVShows="clr-namespace:TVShows" 
        Title="Smonitoring" Height="700" Width="700" 
        Icon="/TVShows;component/Resources/Images/favicon.ico" 
        Loaded="Window_loaded">
    
    <Window.Background>
        <ImageBrush ImageSource="/TVShows;component/Resources/Images/noBrandBg.jpg" Stretch="UniformToFill" />
    </Window.Background>
    
    <Grid Background="{x:Null}">
        
        <DockPanel Name="DpHome" VerticalAlignment="Stretch" Margin="0,25" HorizontalAlignment="Center">
            <TVShows:Cap VerticalAlignment="Top" HorizontalAlignment="Center" DockPanel.Dock="Top" x:Name="Cap" />
            <TVShows:TVShowControl DockPanel.Dock="Bottom" Margin="0,20,0,0" x:Name="RandomTVShow" />
        </DockPanel>
    </Grid>
</Window>
