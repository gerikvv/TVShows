<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
	mc:Ignorable="d"
	x:Class="TVShows.UserViewContol"
	x:Name="UserControl"
	d:DesignWidth="570" d:DesignHeight="398">

	<Grid x:Name="LayoutRoot">
		<Grid HorizontalAlignment="Left" x:Name="Top_grid_Copy" Width="570">
			<Grid.Background>
				<SolidColorBrush Color="Black" Opacity="0.5" />
			</Grid.Background>

			<TextBlock FontFamily="Britannic Bold" FontSize="36" FontStyle="Normal" Foreground="White" Height="82" Margin="0,18,0,0" x:Name="textBlock1_Copy" Opacity="1" OpacityMask="{x:Null}" RenderTransformOrigin="0.5,0.5" Text="Просмотр пользователей" TextAlignment="Center" VerticalAlignment="Top"><TextBlock.BindingGroup><BindingGroup /></TextBlock.BindingGroup><TextBlock.Effect><DropShadowEffect BlurRadius="38" Color="#FFFF4100" Direction="0" Opacity="0.7" RenderingBias="Quality" ShadowDepth="3" /></TextBlock.Effect><TextBlock.TextEffects><TextEffect Foreground="White" /></TextBlock.TextEffects></TextBlock>
			<DockPanel Margin="53,73,52,0" x:Name="dockPanel3">
                <xcdg:DataGridControl x:Name="dataGridControl1" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="1,0,4,30" BorderBrush="{x:Null}" Foreground="#FFF85F03" Focusable="False" BorderThickness="0" NavigationBehavior="None" ItemsSource="{Binding}" >
					<xcdg:DataGridControl.Resources>
						<ResourceDictionary/>
					</xcdg:DataGridControl.Resources>
					<xcdg:DataGridControl.View>
						<xcdg:TableView ColumnStretchMode="All" ColumnStretchMinWidth="80" UseDefaultHeadersFooters="False" IsAlternatingRowStyleEnabled="True" ShowFixedColumnSplitter="False">
							<xcdg:TableView.FixedHeaders>
								<DataTemplate>
									<xcdg:ColumnManagerRow />
								</DataTemplate>
							</xcdg:TableView.FixedHeaders>
						</xcdg:TableView>
					</xcdg:DataGridControl.View>
					<xcdg:DataGridControl.Columns>
                        <xcdg:Column FieldName="ID" Title="ID" CellHorizontalContentAlignment="Center" IsMainColumn="True" DisplayMemberBinding = "{Binding ID}"/>
                        <xcdg:Column FieldName="Name" Title="Name" CellHorizontalContentAlignment="Center" DisplayMemberBinding = "{Binding Name}"/>
                        <xcdg:Column FieldName="Password" Title="Password" CellHorizontalContentAlignment="Center" DisplayMemberBinding = "{Binding Password}"/>
                        <xcdg:Column FieldName="E-mail" Title="E-mail" CellHorizontalContentAlignment="Center" DisplayMemberBinding = "{Binding Email}"/>
					</xcdg:DataGridControl.Columns>
				</xcdg:DataGridControl>
			</DockPanel>
			<DockPanel Background="Black" HorizontalAlignment="Left" x:Name="dockPanel1" Opacity="0.3" Width="55" />
			<DockPanel Background="Black" HorizontalAlignment="Right" x:Name="dockPanel2" Opacity="0.3" Width="55" />
		</Grid>
	</Grid>
</UserControl>